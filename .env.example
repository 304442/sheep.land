# Sheep Land Production Environment Configuration
# Copy this file to .env and configure for your environment

# Server Configuration
APP_NAME="Sheep Land Egypt"
APP_URL=https://sheep.land
APP_ENV=production
APP_DEBUG=false
APP_PORT=8090

# Database Configuration
DB_MAX_CONNECTIONS=100
DB_IDLE_TIMEOUT=30000

# Email Configuration (Configure in Admin Panel)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_ADDRESS=orders@sheep.land
SMTP_FROM_NAME="Sheep Land Egypt"

# Security
CORS_ORIGINS=https://sheep.land,https://www.sheep.land
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
BLOCK_DURATION=900

# Rate Limiting
RATE_LIMIT_ORDERS_PER_MIN=5
RATE_LIMIT_AUTH_PER_MIN=10
RATE_LIMIT_API_PER_MIN=100

# File Uploads
MAX_FILE_SIZE=5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# External Services
WHATSAPP_API_URL=
WHATSAPP_API_KEY=
SMS_PROVIDER=
SMS_API_KEY=
PAYMENT_PROVIDER=
PAYMENT_API_KEY=
PAYMENT_WEBHOOK_SECRET=

# CDN Configuration
CDN_ENABLED=false
CDN_URL=
CDN_PULL_ZONE=

# Monitoring
HEALTH_CHECK_INTERVAL=60000
METRICS_ENABLED=true
ALERT_CPU_THRESHOLD=80
ALERT_MEMORY_THRESHOLD=85
ALERT_DISK_THRESHOLD=90
ALERT_ERROR_RATE=5

# Feature Flags
ENABLE_FARM_MANAGEMENT=true
ENABLE_FEASIBILITY_CALCULATOR=true
ENABLE_PROMO_CODES=true
ENABLE_DELIVERY_TRACKING=true
ENABLE_MAINTENANCE_MODE=false
ENABLE_AUDIT_LOGGING=true

# Logging
LOG_LEVEL=info
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=7
LOG_ERRORS=true
LOG_REQUESTS=false